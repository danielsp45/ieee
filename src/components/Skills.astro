---
// Skills.astro
import { Card, CardContent } from "@/components/ui/card";
import { Badge } from "@/components/ui/badge";
---
<section id="skills" class="py-8 md:py-12">
  <h2 class="mb-6 text-2xl font-bold tracking-tight md:text-3xl">Skills</h2>
  <div class="grid gap-6 md:grid-cols-2">
    <Card>
      <CardContent class="p-6">
        <h3 class="mb-4 text-xl font-semibold">Programming Languages</h3>
        <div class="flex flex-wrap gap-2">
          <Badge class="px-3 py-1">JavaScript</Badge>
          <Badge class="px-3 py-1">TypeScript</Badge>
          <Badge class="px-3 py-1">Python</Badge>
          <Badge class="px-3 py-1">Java</Badge>
          <Badge class="px-3 py-1">C++</Badge>
          <Badge class="px-3 py-1">SQL</Badge>
        </div>
      </CardContent>
    </Card>
    <Card>
      <CardContent class="p-6">
        <h3 class="mb-4 text-xl font-semibold">Web Technologies</h3>
        <div class="flex flex-wrap gap-2">
          <Badge class="px-3 py-1">React</Badge>
          <Badge class="px-3 py-1">Next.js</Badge>
          <Badge class="px-3 py-1">Node.js</Badge>
          <Badge class="px-3 py-1">HTML5</Badge>
          <Badge class="px-3 py-1">CSS3</Badge>
          <Badge class="px-3 py-1">Tailwind CSS</Badge>
        </div>
      </CardContent>
    </Card>
    <Card>
      <CardContent class="p-6">
        <h3 class="mb-4 text-xl font-semibold">Tools & Platforms</h3>
        <div class="flex flex-wrap gap-2">
          <Badge class="px-3 py-1">Git</Badge>
          <Badge class="px-3 py-1">GitHub</Badge>
          <Badge class="px-3 py-1">Docker</Badge>
          <Badge class="px-3 py-1">AWS</Badge>
          <Badge class="px-3 py-1">Vercel</Badge>
          <Badge class="px-3 py-1">VS Code</Badge>
        </div>
      </CardContent>
    </Card>
    <Card>
      <CardContent class="p-6">
        <h3 class="mb-4 text-xl font-semibold">Other Skills</h3>
        <div class="flex flex-wrap gap-2">
          <Badge class="px-3 py-1">Machine Learning</Badge>
          <Badge class="px-3 py-1">Data Analysis</Badge>
          <Badge class="px-3 py-1">UI/UX Design</Badge>
          <Badge class="px-3 py-1">Agile Methodology</Badge>
          <Badge class="px-3 py-1">Problem Solving</Badge>
          <Badge class="px-3 py-1">Team Collaboration</Badge>
        </div>
      </CardContent>
    </Card>
  </div>
</section>
