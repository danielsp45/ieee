---
// Hero.astro
import { Button } from "@/components/ui/button";
import { Mail, Github, Linkedin } from "lucide-react";
import Image from 'astro:assets';
---
<section class="flex flex-col gap-4 py-8 md:flex-row md:items-center md:gap-8 md:py-12">
  <div class="flex-1 space-y-4">
    <h1 class="text-3xl font-bold tracking-tighter sm:text-4xl md:text-5xl">Daniel Pereira</h1>
    <p class="text-xl text-muted-foreground">Computer Science And Engineering Student at University of Minho</p>
    <p class="max-w-[600px] text-muted-foreground">
      Passionate about web development, machine learning, and creating innovative solutions to real-world problems.
    </p>
    <div class="flex gap-4">
      <Button asChild>
        <a href="mail@danielpereira.xyz">
          <Mail className="mr-2 h-4 w-4" />
          Contact Me
        </a>
      </Button>
      <Button variant="outline" asChild>
        <a href="https://github.com/danielsp45" target="_blank" rel="noopener noreferrer">
          <Github className="mr-2 h-4 w-4" />
          GitHub
        </a>
      </Button>
      <Button variant="outline" asChild>
        <a href="https://www.linkedin.com/in/daniel-pereira45/" target="_blank" rel="noopener noreferrer">
          <Linkedin className="mr-2 h-4 w-4" />
          LinkedIn
        </a>
      </Button>
    </div>
  </div>
  <div class="flex justify-center md:justify-end">
    <div class="relative h-60 w-60 overflow-hidden rounded-full border-4 border-primary md:h-80 md:w-80">
      <img
		src="/pfp.jpg"
        alt="Daniel Pereira"
        class="object-cover w-full h-full"
      />
    </div>
  </div>
</section>
