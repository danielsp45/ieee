---
// Contact.astro
import { Card, CardContent } from "@/components/ui/card";
import { Button } from "@/components/ui/button";
import { Mail, Linkedin, Github } from "lucide-react";
---
<section id="contact" class="py-8 md:py-12">
  <h2 class="mb-6 text-2xl font-bold tracking-tight md:text-3xl">Contact Me</h2>
  <div class="grid gap-6 md:grid-cols-2">
    <Card>
      <CardContent className="p-6">
        <div class="space-y-4">
          <div class="flex items-center gap-3">
            <Mail className="h-5 w-5 text-primary" />
            <p>EMAIL</p>
          </div>
          <div class="flex items-center gap-3">
            <Linkedin className="h-5 w-5 text-primary" />
            <a href="#" class="hover:underline">
              linkedin.com/in/alexjohnson
            </a>
          </div>
          <div class="flex items-center gap-3">
            <Github className="h-5 w-5 text-primary" />
            <a href="#" class="hover:underline">
              github.com/alexjohnson
            </a>
          </div>
        </div>
      </CardContent>
    </Card>
    <Card>
      <CardContent className="p-6">
        <form class="space-y-4">
          <div class="space-y-2">
            <label for="name" class="text-sm font-medium">
              Name
            </label>
            <input
              id="name"
              class="w-full rounded-md border border-input bg-background px-3 py-2 text-sm ring-offset-background placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2"
              placeholder="Your name"
            />
          </div>
          <div class="space-y-2">
            <label for="email" class="text-sm font-medium">
              Email
            </label>
            <input
              id="email"
              type="email"
              class="w-full rounded-md border border-input bg-background px-3 py-2 text-sm ring-offset-background placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2"
              placeholder="Your email"
            />
          </div>
          <div class="space-y-2">
            <label for="message" class="text-sm font-medium">
              Message
            </label>
            <textarea
              id="message"
              class="w-full rounded-md border border-input bg-background px-3 py-2 text-sm ring-offset-background placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 min-h-[120px]"
              placeholder="Your message"
            ></textarea>
          </div>
          <Button className="w-full">Send Message</Button>
        </form>
      </CardContent>
    </Card>
  </div>
</section>
