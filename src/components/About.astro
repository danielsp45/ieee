---
// About.astro
import { GraduationCap, Calendar, Mail } from "lucide-react";
---
<section id="about" class="py-8 md:py-12">
  <h2 class="mb-6 text-2xl font-bold tracking-tight md:text-3xl">About Me</h2>
  <div class="grid gap-6 md:grid-cols-2">
    <div class="space-y-4">
	  <p>INSERIR TEXTO AQUI</p>
    </div>
    <div class="space-y-4">
      <div class="flex items-center gap-2">
        <GraduationCap className="h-5 w-5 text-primary" />
        <div>
          <p class="font-medium">CURSO </p>
          <p class="text-sm text-muted-foreground">UNIVERSIDADE</p>
        </div>
      </div>
      <div class="flex items-center gap-2">
        <Calendar className="h-5 w-5 text-primary" />
        <div>
          <p class="font-medium">Date of Birth</p>
          <p class="text-sm text-muted-foreground">DATE</p>
        </div>
      </div>
      <div class="flex items-center gap-2">
        <Mail className="h-5 w-5 text-primary" />
        <div>
          <p class="font-medium">Email</p>
          <p class="text-sm text-muted-foreground">EMAIL</p>
        </div>
      </div>
    </div>
  </div>
</section>
